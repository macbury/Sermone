<div class="navbar navbar-inverse navbar-fixed-top">
  <a class="navbar-brand visible-md visible-lg" href="/">{{ t "chat.title" }}</a>

  {{#if loginError}}
    <a href="#" class="pull-right btn btn-default navbar-btn ok-btn" {{action "reset"}}>OK</a>
    <p class="navbar-text pull-right">
      <span class="label label-danger">Błąd</span>
      {{loginError}} 
    </p>

  {{else}}
    {{#if loggedIn}}
      <ul class="nav navbar-nav pull-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ t "chat.navbar.profile" }} <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href="#">{{ t "chat.navbar.change_avatar" }}</a></li>
            <li><a href="#">{{ t "chat.navbar.change_password" }}</a></li>
            <li class="divider"></li>
            <li><a href="#">{{ t "chat.navbar.logout" }}</a></li>
          </ul>
        </li>
      </ul>

      <p class="navbar-text pull-right" style="margin-right: 5px;">Signed in as <a href="#" class="navbar-link">Mark Otto</a></p>
    {{else}}
      <form class="navbar-form pull-right login-form" {{action 'signInAction' on="submit"}}>
        {{input value=password type="text" class="form-control" disabled=isProcessingLogin placeholder="Nick"}}
        <button type="submit" class="btn btn-default navbar-btn" style="margin-top: 0px;" {{bindAttr disabled="isProcessingLogin"}}>
          {{#if isProcessingLogin}}
            {{ t "chat.login.button.processing" }}
          {{else}}
            {{ t "chat.login.button.submit" }}
          {{/if}}
        </button>
      </form>
    {{/if}}
  {{/if}}
</div>

<div class="chat">
    <div class="media message">
      <a class="pull-left" href="#">
        <img class="media-object" data-src="holder.js/64x64" alt="64x64" style="width: 48px; height: 48px;" src="data:image/png;base64,">
      </a>
      <div class="media-body">
        <h4 class="media-heading">ByteEater</h4>
        <p> Jak słucham Martina to sie głodny robię ....zaraz ide smażyć hamburgery </p>
      </div>
    </div>
</div>

{{#if loggedIn}}
  <div class="navbar navbar-fixed-bottom">
    <form class="navbar-form" action="">
      <input type="text" class="form-control col-lg-8" placeholder="Search">
    </form>
  </div>
{{/if}}